<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portf_items.main_image %>
    </div>
    <div class="col-md-5">
      <h1><%= @portf_items.title%></h1>
      <hr>
      <em><%= @portf_items.subtitle %></em>

      <p><%= @portf_items.body %></p>

      <h3>Technologies Used:</h3>

      <%= @portf_items.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>  
</div>