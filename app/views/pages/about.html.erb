<div class="app-card-container">
  <div class="card box-shadow" style="height:565px; overflow-y:auto;">

    <h2 class="card-title">About Me</h2>
    <hr>
    <div class="row">
      <div class="col-md-4 my-3">
        <%= image_tag "profile_pic.jpg", width:'100%', alt: "profile image", class:'profile-img' %>

        <div class="skills">
          <% @skills.each do |skill| %>
            
            <div class="skill">
              <h6><%= skill.title %></h6>
              <div class="progress">
                <div 
                  class="progress-bar progress-bar-striped bg-info"
                  role="progressbar"
                  aria-valuenew="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width:<%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
